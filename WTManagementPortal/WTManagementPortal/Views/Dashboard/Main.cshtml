@model WTManagementPortal.ViewModels.DashboardGrid
@{
    ViewBag.Title = "Dashboard";
    
}

<div class="wt-container">
    <div class="row-fluid">
        <div class="wt-subcontainer">
            <div class="span12">
                <h2><span class="oi" data-glyph="dashboard"></span> Control Center</h2>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="wt-subcontainer">
            <div class="span4">
                <div class="accordion" id="wt-accordion">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle wt-tab info" data-toggle="collapse" data-parent="#wt-accordion" href="#collapseOne">
                                <span class="oi right" data-glyph="grid-four-up"></span>  Tennant Information
                            </a>
                        </div>
                        <div id="collapseOne" class="accordion-body collapse in">
                            <div class="accordion-inner">
                                @Html.Partial("~/Views/Dashboard/Partials/TennantSidePanel/_TennantInformation.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle wt-tab success" data-toggle="collapse" data-parent="#wt-accordion" href="#collapseTwo">
                                <span class="oi right" data-glyph="grid-four-up"></span>  Additional Tennant Option 1
                            </a>
                        </div>
                        <div id="collapseTwo" class="accordion-body collapse">
                            <div class="accordion-inner">
                                @Html.Partial("~/Views/Dashboard/Partials/TennantSidePanel/_TennantInformationSecondPanel.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle wt-tab primary" data-toggle="collapse" data-parent="#wt-accordion" href="#collapseThree">
                                <span class="oi right" data-glyph="grid-four-up"></span>  Additional Tennant Option 2
                            </a>
                        </div>
                        <div id="collapseThree" class="accordion-body collapse">
                            <div class="accordion-inner">
                                @Html.Partial("~/Views/Dashboard/Partials/TennantSidePanel/_TennantInformationThirdPanel.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="span8">
                <ul class="nav nav-tabs wt-tab-nav" id="wtTabs">
                    <li class="active">
                        <a class="wt-tab info" href="#mDashboard">
                            <span class="oi right" data-glyph="graph"></span> Main Dashboard
                        </a>
                    </li>
                    <li>
                        <a class="wt-tab primary a-c-tt" href="#totalAgents" title="The total number of Agents you have configured">
                            <span class="oi right" data-glyph="compass"></span>@Html.Encode(Model.TotalAgent) Agents Configured
                        </a>
                    </li>
                    <li>
                        <a class="wt-tab success a-a-tt" href="#aliveAgents" title="The total number of Alive Agents you currently have">
                            <span class="oi right" data-glyph="pulse"></span> @Html.Encode(Model.AliveAgent) Agents Alive
                        </a>
                    </li>
                    <li>
                        <a class="wt-tab warning a-u-tt" href="#unresAgents" title="The total number of Agents that are not responding">
                            <span class="oi right" data-glyph="warning"></span> @Html.Encode(Model.DeadAgent) Agents Unresponsive
                        </a>
                    </li>
                </ul>
                <div class="tab-content wt-tab-content">
                    <div class="wt-pane tab-pane active" id="mDashboard">
                        @Html.Partial("~/Views/Dashboard/Partials/_MainDashboard.cshtml")
                    </div>
                    <div class="wt-pane tab-pane" id="totalAgents">
                        @Html.Action("_allAgents", "Dashboard")
                    </div>
                    <div class="wt-pane tab-pane" id="aliveAgents">
                        @Html.Action("_AliveAgents", "Dashboard")
                    </div>                       
                    <div class="wt-pane tab-pane" id="unresAgents">
                        @Html.Action("_NoAgents", "Dashboard")
                    </div>                                    
                </div>
            </div>
        </div>
    </div>
</div>
